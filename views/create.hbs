<section id="create-section">
    <h1 class="item">New Accomodation</h1>
    <main class="item padded align-center">

        {{#if error}}
        <div class="error-box">
            {{#each error.messages}}
            <p>{{this}}</p>
            {{/each}}
            </div>
        {{/if}}
        
        <form action="/create" method="post" class="layout left large">
            <div class="col aligned">
                <label><span>Name</span><input {{#if error.fields.name}}class="field-error"{{/if}} type="text" name="name" value="{{body.name}}"></label>
                <label><span>City</span><input {{#if error.fields.city}}class="field-error"{{/if}}type="text" name="city" value="{{body.city}}"></label>
                <label><span>Beds</span><input {{#if error.fields.beds}}class="field-error"{{/if}}type="number" name="beds" value="{{body.beds}}"></label>
                <label><span>Price per night</span><input {{#if error.fields.price}}class="field-error"{{/if}}type="number" name="price" value="{{body.price}}"></label>
                <label><span>Image Url</span><input {{#if error.fields.imageUrl}}class="field-error"{{/if}}type="text" name="imageUrl" value="{{body.imageUrl}}"></label>
            </div>
            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea {{#if error.fields.description}}class="field-error"{{/if}} name="description">{{body.description}}</textarea>
                </label>
            </div>
            <div class="align-center">
                <input type="submit" class="action" value="Publish item">
            </div>
        </form>
    </main>
</section>