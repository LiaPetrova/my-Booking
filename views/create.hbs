<section class="create-section">
    <h1 class="item">New Accomodation</h1>
    <main class="item padded align-center">
        <form action="/create" method="post" class="layout left large">
            <div class="col aligned">
                <label><span>Name</span><input type="text" name="name"></label>
                <label><span>City</span><input type="text" name="city"></label>
                <label><span>Beds</span><input type="number" name="beds"></label>
                <label><span>Price per night</span><input type="number" name="price"></label>
                <label><span>Image Url</span><input type="text" name="imageUrl"></label>
            </div>
            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description"></textarea>
                </label>
            </div>
            <div class="align-center">
                <input type="submit" class="action" value="Publish item">
            </div>
        </form>
    </main>
</section>