<section id="create-section">
    <h1 class="item">Edit Accomodation</h1>
    <main class="item padded align-center">
        <form action="/room/{{room._id}}/edit" method="post" class="layout left large">
        {{#if error}}
        <div class="error-box">
            {{#each error}}
            <p>{{this}}</p>
            {{/each}}
            </div>
        {{/if}}
        {{#with room}}
            <div class="col aligned">
                <label><span>Name</span><input type="text" name="name" value="{{name}}"></label>
                <label><span>City</span><input type="text" name="city" value="{{city}}"></label>
                <label><span>Beds</span><input type="number" name="beds" value="{{beds}}"></label>
                <label><span>Price per night</span><input type="number" name="price" value="{{price}}"></label>
                <label><span>Image Url</span><input type="text" name="imageUrl" value="{{imageUrl}}"></label>
            </div>
            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{description}}</textarea>
                </label>
                <div class="align-center">
                    <input type="submit" class="action" value="Update item">
                </div>
            </div>
            {{/with}}
        </form>
    </main>
</section>