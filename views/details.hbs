<section id="catalog-section">
    {{#with room}}
    <h1 class="item">{{name}} - Details</h1>
    <div class="item padded">
        <main class="layout right large">

            <div class="col">
                <img src="{{imageUrl}}" alt="room" class="img-large">
            </div>

            <div class="content pad-med">
                <p><strong>Price per night: {{price}}$</strong></p>
                <p>{{description}}</p>

                <div class="align-center">
                    <div>
                        Price per night: <strong>{{price}}</strong>
                    </div>

                    <a class="action cta" href="/facility/{{_id}}/decorateRoom">Edit Facilities</a>
                </div>
            </div>

        </main>
        <footer>Listed by TODO OWNER</footer>
    </div>
    {{/with}}
</section>
 